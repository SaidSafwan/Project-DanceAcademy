//- page-a.pug
//- extending file name
extends base.pug   

block scripts
  script(src="../static/index.js")

block style
  style
    include ../static/style.css

block content
  section#IntroSection 
    div Welcome To Said's Dance Academy 
    div  
      p Where passion and movement unite

  section#MissionSection 
    h2 Our Missions
    div.card
      h3 Dance Perfection
      div.card-box
        div.card-img
          img(src="/static/Images/card1-img.png", alt="")
        div.card-content
          p Achieve flawless movements through focused practice and dedication.
    div.card
      h3 Dance the way you like 
      div.card-box
        div.card-img
          img(src="/static/Images/card2-img.png", alt="")
        div.card-content
          p Express your unique style and individuality with every dance step.
    div.card
      h3 Teaching Expert 
      div.card-box
        div.card-img
          img(src="/static/Images/card3-img.png", alt="")
        div.card-content
          p Learn from experienced instructors dedicated to refining your skills.

  section#SponserSection 
    h2 Our Sponsors
    div#sponsers
      img(src="/static/Images/sponser4.png", alt="sponser image" class="spImage small-sp")
      img(src="/static/Images/sponser3.png", alt="sponser image" class="spImage big-sp")
      img(src="/static/Images/sponser2.png", alt="sponser image" class="spImage")
      img(src="/static/Images/sponser5.png", alt="sponser image" class="spImage big-sp")
      img(src="/static/Images/sponser6.png", alt="sponser image" class="spImage small-sp")
      img(src="/static/Images/sponser7.png", alt="sponser image" class="spImage")
